{
  "name": "ts-sample",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/index.js",
  "typings": "./src/index.ts",
  "scripts": {
    "startTs": "node_modules/.bin/ts-node ./src/index.ts",
    "startJs": "node ./dist/index.js",
    "dist": "node_modules/.bin/tsc",
    "build": "node_modules/.bin/tsc -rootDir ./ -outDir build --target es2016 --module commonjs --esModuleInterop true",
    "test": "mocha",
    "ctest": "nyc mocha",
    "lint": "node_modules/.bin/tslint -c tslint.json ./src/**/*.ts --fix",
    "format": "node_modules/.bin/tsfmt -r"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ilyydy/ts-sample.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ilyydy/ts-sample/issues"
  },
  "homepage": "https://github.com/ilyydy/ts-sample#readme",
  "dependencies": {
    "@types/source-map-support": "^0.4.1",
    "@types/yargs": "^11.1.1",
    "source-map-support": "^0.5.6",
    "yargs": "^12.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "@types/node": "^8.10.21",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "mocha-typescript": "^1.1.17",
    "nyc": "^12.0.2",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2",
    "typescript-formatter": "^7.2.2"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "all": true,
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "sourceMap": true,
    "instrument": true,
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "docs/reports/coverage"
  }
}
